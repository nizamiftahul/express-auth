generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model c_user {
  id         Int       @id @default(autoincrement())
  fullname   String
  email      String    @unique
  password   String
  otp        String?
  photo      String?
  last_login DateTime?
  c_role_id  Int
  c_role       c_role    @relation(fields: [c_role_id], references: [id])

  creted_by  Int?
  created_at DateTime @default(now())
  updated_by Int?
  updated_at DateTime @updatedAt
}

model c_role {
  id   Int    @id @default(autoincrement())
  name String @unique

  creted_by  Int?
  created_at DateTime @default(now())
  updated_by Int?
  updated_at DateTime @updatedAt
  c_user     c_user[]
}
